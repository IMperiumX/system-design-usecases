# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/google_drive

# Storage
STORAGE_PATH=./storage
BLOCK_SIZE_MB=4
MAX_FILE_SIZE_GB=10

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here-base64-encoded

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Notification Service
LONG_POLL_TIMEOUT_SECONDS=60
MAX_CONNECTIONS_PER_SERVER=10000

# Cache
CACHE_TTL_SECONDS=300
ENABLE_METADATA_CACHE=true

# Optimization
ENABLE_COMPRESSION=true
ENABLE_DEDUPLICATION=true
ENABLE_DELTA_SYNC=true

# Storage Policies
MAX_VERSIONS_PER_FILE=10
COLD_STORAGE_DAYS=90
